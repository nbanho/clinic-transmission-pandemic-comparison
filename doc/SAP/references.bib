	journal = {The Journal of Infectious Diseases},
	author = {Zürcher, Kathrin and Riou, Julien and Morrow, Carl and Ballif, Marie and Koch, Anastasia and Bertschinger, Simon and Warner, Digby F and Middelkoop, Keren and Wood, Robin and Egger, Matthias and Fenner, Lukas},
	year = {2022},
	pages = {1642--1652},
	file = {Snapshot:/Users/nb22i345/Zotero/storage/JGRF56ME/6510424.html:text/html;Zürcher et al_2022_Estimating Tuberculosis Transmission Risks in a Primary Care Clinic in South.pdf:/Users/nb22i345/Zotero/storage/DQDN66HJ/Zürcher et al_2022_Estimating Tuberculosis Transmission Risks in a Primary Care Clinic in South.pdf:application/pdf},
