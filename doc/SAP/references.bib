	author = {Mikszewski, Alex and Stabile, Luca and Buonanno, Giorgio and Morawska, Lidia},
	year = {2021},
	keywords = {Influenza, Measles, Ventilation, Quanta emission rate, SARS-CoV-2 (COVID-19) airborne transmission},
	pages = {101285},
	file = {Mikszewski et al_2022_The airborne contagiousness of respiratory viruses.pdf:/Users/nb22i345/Zotero/storage/BS9GYZ4Y/Mikszewski et al_2022_The airborne contagiousness of respiratory viruses.pdf:application/pdf;ScienceDirect Snapshot:/Users/nb22i345/Zotero/storage/RF4GU7QN/S1674987121001493.html:text/html},
